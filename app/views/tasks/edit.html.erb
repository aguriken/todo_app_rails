<%= form_with(model: [ @project, @task ]) do |f| %>
  <%= f.text_field :title, :placeholder => 'YOUR TASK TITLE' %>
  <%= link_to '戻る', :back %> 
  <%= f.date_field("deadline")%>
  <%= f.label :description %><br />
  <%= f.text_area :description, rows: 5 %>
  <%= link_to "Delete", "/projects/#{@project.id}/tasks/#{@task.id}", method: :delete, data: { confirm: "You sure?" } %>
  <%= f.submit "Update Task" %>
<% end %>
